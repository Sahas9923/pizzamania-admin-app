<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="@android:color/white"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvBranchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colombo Branch"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvBranchAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 Colombo Street"
            android:textSize="14sp"
            android:textColor="#555555"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvBranchLatLng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lat: 6.9271, Lng: 79.8612"
            android:textSize="13sp"
            android:textColor="#555555"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvBranchHoursDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours: 9:00 AM - 9:00 PM, Mon-Sat"
            android:textSize="13sp"
            android:textColor="#555555"
            android:paddingTop="2dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
